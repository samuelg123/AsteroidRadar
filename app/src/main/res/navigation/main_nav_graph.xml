<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.udacity.asteroidradar.features.neo.presentation.MainFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_showDetail"
            app:destination="@id/detailFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.udacity.asteroidradar.features.neo.presentation.DetailFragment"
        android:label="Detail {title}"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="title"
            app:argType="string"/>

        <argument
            android:name="selectedAsteroid"
            app:argType="com.udacity.asteroidradar.features.neo.domain.model.Asteroid"/>
    </fragment>

</navigation>